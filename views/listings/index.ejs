<% layout("/layouts/boilerplate") %>


    <h3>All Listings</h3>

    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for (let listing of allListings) { %>
            <a href="/listings/<%=listing._id%>" style="text-decoration:none;">
                <div class="col mb-4">
                    <div class="card" style="width: 20rem;" >
                        <img src="<%= listing.image && listing.image.url ? listing.image.url : 'https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ6Op9f0I67ypDQzkvmPJOKOQLMVpE7hdL__Q&s' %>"
                            class="card-img-top" alt="listing_img" style="height:20rem">
                        <div class="card-img-overlay"></div>
                            <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%= listing.title %>
                                </b> <br>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> /night
                            </p>
                        </div>
                    </div>
                </div>
            </a>
            
            <% } %>
    </div>